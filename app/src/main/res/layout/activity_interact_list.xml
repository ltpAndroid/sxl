<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InteractActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/iv_back_interact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp5"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_left_right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_announce"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp28"
                android:layout_margin="@dimen/dp1"
                android:background="@drawable/bg_half_left"
                android:gravity="center"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:text="公告"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp28"
                android:layout_margin="@dimen/dp1"
                android:background="@drawable/bg_half_right"
                android:gravity="center"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />
        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>