<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/item_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/classic_book" />

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text="朝读经典"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐志国  杨振威" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  主编" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_book_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:lineSpacingExtra="@dimen/dp2"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/brief_introduction" />
    </LinearLayout>
</LinearLayout>